{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "api",
  "rewrites": [
    { "source": "/", "destination": "/api/status" },
    { "source": "/api/:path*", "destination": "/api/:path*" }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "nodejs@18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 